{
  "name": "ohzi-vscode-glb-viewer",
  "version": "2.9.3",
  "publisher": "OHZIInteractiveStudio",
  "main": "extension.js",
  "icon": "icon.png",
  "displayName": "GLTF/GLB Viewer",
  "description": "View and explore your GLTF/GLB files",
  "keywords": ["GLB", "glb", "glTF", "gltf", "3d", "model", "viewer", "ohzi", "ohzi-interactive", "ohzi-interactive-studio", "three.js", "threejs", "three", "three-js"],
  "repository": {
    "type": "git",
    "url": "https://github.com/ohzinteractive/vscode-glb-viewer"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "authors": [
    "Gianni Ballerini <ballerinidev@gmail.com>",
    "Ramiro Fages <ramiro.fages@ohzi.io>",
    "Federico Gratti <federico.gratti@ohzi.io>"
  ],
  "license": "MIT",
  "dependencies": {
    "pit-js": "^4.1.1",
    "three": "^0.176.0"
  },
  "activationEvents": [
    "onFileSystem:file",
    "onFileSystem:vsls",
    "onCommand:extension.viewGLB"
  ],
  "contributes": {
    "customEditors": [
      {
        "viewType": "glbViewer.customEditor",
        "displayName": "GLB Viewer",
        "selector": [
          {
            "filenamePattern": "*.glb"
          },
          {
            "filenamePattern": "*.gltf"
          }
        ],
        "priority": "default"
      }
    ],
    "configuration": {
      "title": "GLB Viewer Settings",
      "properties": {
        "glbViewer.prettifyPropertyLabels" : {
          "type": "boolean",
          "default": true,
          "description": "Prettyfies the labels of the object properties in the details panel"
        },
        "glbViewer.relevant3dObjectKeys": {
          "type": "array",
          "description": "Select which properties to show in the details panel",
          "items": {
            "type": "string",
            "enum": [
              "name",
              "type",
              "position",
              "rotation",
              "scale",
              "visible",
              "castShadow",
              "receiveShadow",
              "userData",
              "layers",
              "matrix",
              "matrixWorld",
              "up",
              "children",
              "parent",
              "frustumCulled",
              "globalScale",
              "globalPosition"
            ]
          },
          "default": [
            "name",
            "type",
            "position",
            "rotation",
            "scale",
            "globalScale",
            "userData"
          ],
          "uniqueItems": true
        }
      }
    }
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.2",
    "pug": "^3.0.3",
    "sass": "1.77.5",
    "standardx": "^7.0.0",
    "stylelint": "^15.3.0",
    "stylelint-config-standard-scss": "^7.0.1",
    "stylelint-order": "^6.0.3",
    "vite": "^6.3.5"
  },
  "scripts": {
    "start": "vite build --watch",
    "watch": "vite build --watch",
    "build": "vite build"
  },
  "standardx": {
    "ignore": [
      "vite.config.mjs",
      "rollup.config.mjs",
      "src/webview/lib/*"
    ]
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
