{
  "name": "ohzi-vscode-glb-viewer",
  "version": "1.0.0",
  "main": "./extension.js",
  "engines": {
    "vscode": "^1.80.0"
  },
  "repository": "git@github.com:ohzinter`acti`ve/vscode-glb-viewer.git",
  "author": "Gianni Ballerini <Gianniballerini@gmail.com>",
  "license": "MIT",
  "dependencies": {
  },
  "activationEvents": [
    "onFileSystem:file",
    "onFileSystem:vsls",
    "onCommand:extension.viewGLB",
    "onCustomEditor:glbViewer.customEditor"
  ],
  "contributes": {
    "customEditors": [
      {
        "viewType": "glbViewer.customEditor",
        "displayName": "GLB Viewer",
        "selector": [
          { "filenamePattern": "*.glb" }
        ],
        "priority": "option"
      }
    ]
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.2",
    "pug": "^3.0.3",
    "sass": "^1.77.6",
    "standardx": "^7.0.0",
    "stylelint": "^15.3.0",
    "stylelint-config-standard-scss": "^7.0.1",
    "stylelint-order": "^6.0.3",
    "vite": "^6.3.5",
    "vite-plugin-pug-transformer": "^1.0.5"
  },
  "scripts": {
    "dev": "concurrently \"vite build --watch\" \"npm run watch-extension\"",
    "build": "vite build && cp src/extension/extension.js extension.js",
    "watch-extension": "chokidar 'src/extension/extension.js' -c 'cp src/extension/extension.js ./extension.js' --initial"
  },
  "standardx": {
    "ignore": [
      "vite.config.mjs",
      "rollup.config.mjs"
    ]
  }
}
