{
  "name": "ohzi-vscode-glb-viewer",
  "version": "1.0.0",
  "main": "extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ohzinteractive/vscode-glb-viewer"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "author": "Gianni Ballerini <Gianniballerini@gmail.com>",
  "license": "MIT",
  "dependencies": {},
  "activationEvents": [
    "onFileSystem:file",
    "onFileSystem:vsls",
    "onCommand:extension.viewGLB",
    "onCustomEditor:glbViewer.customEditor"
  ],
  "contributes": {
    "customEditors": [
      {
        "viewType": "glbViewer.customEditor",
        "displayName": "GLB Viewer",
        "selector": [
          {
            "filenamePattern": "*.glb"
          }
        ],
        "priority": "option"
      }
    ]
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.2",
    "pug": "^3.0.3",
    "sass": "^1.77.6",
    "standardx": "^7.0.0",
    "stylelint": "^15.3.0",
    "stylelint-config-standard-scss": "^7.0.1",
    "stylelint-order": "^6.0.3",
    "vite": "^6.3.5",
    "vite-plugin-pug-transformer": "^1.0.5"
  },
  "scripts": {
    "start": "vite build --watch",
    "build": "vite build"
  },
  "standardx": {
    "ignore": [
      "vite.config.mjs",
      "rollup.config.mjs"
    ]
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
